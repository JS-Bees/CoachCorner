datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator nexus {
  provider = "nexus-prisma"
}

model Person {
  id              Int @id @default(autoincrement())
  givenName       String
  familyName      String
  surveyResults   Int @default(0)
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Coach {
  id              Int @id @default(autoincrement())
  firstName       String
  lastName        String
  sport           String
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}